<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_src"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:transitionName="@string/transition_image"
            tools:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ltitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:padding="4dp"
                android:textColor="@android:color/white"
                android:transitionName="@string/transition_title"
                tools:text="陈晓东吐真心话:只爱过张柏芝 其它绯闻都是假的"/>

            <TextView
                android:id="@+id/digest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:minLines="2"
                android:padding="4dp"
                android:textColor="@android:color/white"
                android:visibility="gone"
                tools:text="陈晓东一家四口网易娱乐8月18日报道据台湾媒体报道，港星陈晓东唱红《心理游戏》、《心有独钟》等不少经典歌曲，俊俏外型又演又会唱，成为许多少女心中的理想情人，他在"/>

            <TextView
                android:id="@+id/source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@android:color/white"
                android:visibility="gone"
                tools:text="看看新闻KNEWS"/>

        </LinearLayout>
    </RelativeLayout>
</androidx.appcompat.widget.CardView>